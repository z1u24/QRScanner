<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <!--SurfaceView-->
    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--自定义扫码界面-->
    <com.iqos.qrscanner.widget.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:scan_line_color="#232E68"
        app:scan_line_move_speed="3"
        app:scan_rect_corner_color="#232E68"
        app:scan_rect_corner_length="20dp"
        app:scan_rect_corner_width="4dp"
        app:scan_text_above_rect="false"
        app:scan_tip_text="把二维码放入框内，自动扫描"
        app:scan_tip_text_size="14sp"
        app:scan_view_title_text="呵呵呵呵" />

    <Button
        android:id="@+id/button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/button"
        android:text="扫码" />

    <!--Toolbar-->
    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/app_scan_tool_bar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?android:attr/actionBarSize"-->
        <!--android:background="@color/colorPrimary"-->
        <!--app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
        <!--app:title="扫码"-->
        <!--app:titleTextColor="@android:color/white" />-->

</RelativeLayout>
